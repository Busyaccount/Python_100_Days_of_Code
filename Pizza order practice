print("Welcome to Python Pizza Deliveries!")
size = input("What size pizza do you want? S, M, or L ")
add_pepperoni = input("Do you want pepperoni? Y or N ")
extra_cheese = input("Do you want extra cheese? Y or N ")
# ðŸš¨ Don't change the code above ðŸ‘†

#Write your code below this line ðŸ‘‡


#pizza cost
if size == "S":
    pizza_cost = 15
    if add_pepperoni == "Y":
        topping = 2
    else:
        topping = 0
    if extra_cheese == "Y":
        extra_cheese = 1
    else:
        extra_cheese = 0
    
elif size == "M":
    pizza_cost = 20
    if add_pepperoni == "Y":
        topping = 3
    else:
        topping = 0
    if extra_cheese == "Y":
        extra_cheese = 1
    else:
        extra_cheese = 0
    
elif size == "L":
    pizza_cost = 25
    if add_pepperoni == "Y":
        topping = 3
    else:
        topping = 0
    if extra_cheese == "Y":
        extra_cheese = 1
    else:
        extra_cheese = 0
    

total = pizza_cost + topping + extra_cheese
print(f"Your final bill is: ${total}.")

